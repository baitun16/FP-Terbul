<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.terbul.frag_tambahmitra">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a8"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_commerce" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/moon"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.terbul.Title" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="24dp"

                    app:cardBackgroundColor="@color/mtrl_on_primary_disabled">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ns"
                            style="@style/TextAppearance.terbul.Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Mitra" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText

                                android:id="@+id/namamitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/textInputOutlineColor" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/deskkl"
                            style="@style/TextAppearance.terbul.Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi Mitra" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/deskmitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/textInputOutlineColor"
                                android:inputType="textEmailAddress" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/em"
                            style="@style/TextAppearance.terbul.Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailmitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/textInputOutlineColor"
                                android:inputType="textEmailAddress" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/tlp"
                            style="@style/TextAppearance.terbul.Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomer Telepon" />

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/notelpmit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/textInputOutlineColor"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            style="@style/TextAppearance.terbul.Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/alamatmitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/textInputOutlineColor"
                                android:hint="" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/savemitra"
                            style="@style/Widget.terbul.Button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/design_default_color_secondary"
                            android:text="SIMPAN" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>